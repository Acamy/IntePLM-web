<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="cn.itcast.nsfw.user.entity.User" table="sys_user">
		<id name="id" type="java.lang.String">
			<column name="USER_ID" length="32" />
			<generator class="uuid.hex" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="USER_NAME" length="20" />
		</property>
		<property name="dept" type="java.lang.String">
			<column name="DEPARTMENT" length="20" />
		</property>		
		<property name="account" type="java.lang.String">
			<column name="LAST_UPDATED_BY" length="50" />
		</property>
		<property name="password" type="java.lang.String">
			<column name="PASSWORD" length="50" />
		</property>
		<property name="headImg" type="java.lang.String">
			<column name="CULTURE" length="100" />
		</property>
		<property name="gender" type="java.lang.String">
			<column name="ENABLED_FLAG" length="50"/>
		</property>
		<property name="email" type="java.lang.String">
			<column name="EMAIL" length="50" />
		</property>
		<property name="mobile" type="java.lang.String">
			<column name="POST_ADDRESS" length="300" />
		</property>
		<property name="birthday" type="java.lang.String">
			<column name="CREATED_BY" length="50" />
		</property>
		<property name="state" type="java.lang.String">
			<column name="VAULT_NAME" length="100" />
		</property>
		<property name="memo" type="java.lang.String">
			<column name="USERSTATUS" length="200" />
		</property>
	</class>

</hibernate-mapping>
	